systemctl:
filename="/etc/systemd/system/shadowsocks.service"
cat>"${filename}"<<EOF
[Unit]
Description=Shadowsocks Server
After=network.target

[Service]
ExecStart=shadowsocks-rust.ssserver -c /etc/shadowsocks-rust/config.json
Restart=on-abort

[Install]
WantedBy=multi-user.target
EOF