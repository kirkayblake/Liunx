self:
https://github.com/shadowsocks/shadowsocks-rust/releases

shadowsocks="shadowsocks-v1.15.3.aarch64-apple-darwin.tar.xz"
mkdir -p /etc/shadowsocks-rust
mv "${shadowsocks}"  /etc/shadowsocks-rust
tar -xvf /etc/shadowsocks-rust/"${shadowsocks}" -C /etc/shadowsocks-rust
filename="/etc/shadowsocks-rust/config.json"
cat>"${filename}"<<EOF
{
    "server":"192.168.44.131",
    "server_port":30066,
    "password":"123456",
    "timeout":600,
    "method":"aes-256-gcm",
    "local_address": "192.168.44.131",
    "local_port": 1080
}
EOF
chmod +x /etc/shadowsocks-rust/*
/etc/shadowsocks-rust/ssserver -c config.json





snap:
apt-get install snapd -y
snap install shadowsocks-rust
shadowsocks-rust.ssserver -h
shadowsocks-rust.sslocal -h


